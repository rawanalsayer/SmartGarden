<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/con">

        <ImageView
            android:id="@+id/imageView3"

            android:layout_width="@dimen/plantImage"
            android:layout_height="@dimen/plantImage"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_action_actr"

            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="166dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="6dp"
            android:text="Light intensity"
            android:textColor="#0e8360"

            android:textSize="@dimen/titleSizeView"

            android:textStyle="bold"
            android:layout_gravity="center"

            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.296"
            tools:layout_editor_absoluteX="134dp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:scrollbars="vertical"
            android:text="@string/lightd"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"

            android:textSize="@dimen/titleSizeView"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="134dp" />

        <TextView
            android:id="@+id/Text"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:scrollbars="vertical"
            android:text="@string/lightp"

            android:textSize="@dimen/fontSizeView"
            android:layout_marginBottom="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="134dp" />

    </LinearLayout>
</ScrollView>